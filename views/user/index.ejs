<div class="container">
	<h3>Users</h3>
	<table class="table">
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Title</th>
			<th>Email</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<% _.each(users, function(user) {%>
		<tr data-id="<%= user.id %>" data-model="user">
			<% if (user.online) { %>
				<td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></td>

			<% } else { %>
				<td><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></td>

			<% } %>
			<td><%= user.id %></td>
			<td><%= user.name %></td>
			<td><%= user.title %></td>
			<td><%= user.email %></td>
			<% if (user.admin) { %>
				<!-- <td><img src="/images/admin.png"></td> -->
				<td><span class="glyphicon glyphicon-king" aria-hidden="true"></span></td>
			<% } else {%>
				<td><span class="glyphicon glyphicon-user" aria-hidden="true"></span></td>
				<!-- <td><img src="/images/pawn.png"></td> -->
			<% } %>
			<td><a href="user/show/<%= user.id %>" class="btn-sm btn-primary">Show</td>
			<td><a href="user/edit/<%= user.id %>" class="btn-sm btn-warning">Edit</td>

			<td><form action="/user/destroy/<%= user.id %>" method="POST">
				<input type="hidden" name="_method" value="delete"></input>
				<input type="submit" class="btn btn-sm btn-danger" value="Delete"></input>
				<input type="hidden" name="_csrf" value="<%= _csrf %>"/>
			</form></td>

			<!-- <td><a href="user/destroy/<%= user.id %>" class="btn-sm btn-danger">Delete</td> -->
		</tr>
		<% }) %>
	</table>
</div>
